<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
<% if (!(addresses.length > 0)) { %>
    <link rel="stylesheet" href="/css/user-panel.css">
<% } %>
</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
    <div class='my-4'>
      <% if (errorMessage.length > 0) { %>
        <div class='user-message error d-flex align-items-center'>
          <h3><%= errorMessage %></h3>
        </div>
      <% } %>
      <% if (successMessage.length > 0) { %>
        <div class='user-message success d-flex align-items-center'>
          <h3><%= successMessage %></h3>
        </div>
      <% } %>
    </div>
    <section>
      <% if (cart.length > 0) { %>
        <ul class='cart-list'>
          <% cart.forEach(prod => { %>
            <li class='my-5'>
              <div class='cart-card'>
                <p class='d-flex align-self-start mb-3'><%= prod.name %></p>
                <div class='container-fluid d-md-block d-none'>
                  <div class='row align-items-start justify-content-start'>
                    <div class='col-6 d-flex align-items-start justify-content-center flex-column m-auto p-0'>
                      <a href="/product/<%= prod.prodId %>"><img src="<%= prod.image %>" alt="<%= prod.name %>"></a>
                    </div>
                    <div class='col-5 d-flex align-items-start justify-content-center flex-column m-auto p-0'>
                      <div class='d-flex flex-row align-items-center justify-content-center gap-2'>
                        <p><%= prod.quantity %> buc</p>
                        <form action='/increase-quantity' method='POST' style='height: 24px;'>
                          <button type='submit' style='height: 24px;'>
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#333652" class="bi bi-plus-square" viewBox="0 0 16 16">
                              <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                              <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                            </svg>
                            <input type="hidden" name="prodId" value='<%= prod.prodId %>'>
                          </button>
                          <input type="hidden" name="_csrf" value='<%= csrfToken %>'>
                        </form>
                      </div>
                      <p><%= prod.price %> RON/buc</p>
                      <br>
                      <p><%= prod.totalPrice %> RON</p>
                    </div>
                    <div class='col-1 d-flex align-items-start justify-content-center flex-column m-auto p-0'>
                      <form action='/remove-from-cart' method='POST'>
                        <button type='submit'>
                          <svg xmlns="http://www.w3.org/2000/svg" width="44" height="44" fill="#333652" class="bi bi-x-square" viewBox="0 0 16 16">
                            <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                            <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                          </svg>
                        </button>
                        <input type="hidden" name="prodId" value='<%= prod.prodId %>'>
                        <input type="hidden" name="_csrf" value='<%= csrfToken %>'>
                      </form>
                    </div>
                  </div>
                </div>

                <div class='d-block d-md-none'>
                  <div class='d-flex flex-column align-items-center justify-content-center'>
                    <div>
                      <a href="/product/<%= prod.prodId %>"><img src="<%= prod.image %>" alt="<%= prod.name %>"></a>
                    </div>
                    <div class='d-flex flex-column gap-2'>
                      <div class='d-flex flex-column'>
                        <div class='d-flex flex-row align-items-center justify-content-center gap-2'>
                          <p><%= prod.quantity %> buc</p>
                            <form action='/increase-quantity' method='POST' style='height: 36px;'>
                              <button type='submit' style='height: 36px;'>
                                <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" fill="#333652" class="bi bi-plus-square" viewBox="0 0 16 16">
                                  <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                                  <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                                </svg>
                                <input type="hidden" name="prodId" value='<%= prod.prodId %>'>
                              </button>
                              <input type="hidden" name="_csrf" value='<%= csrfToken %>'>
                            </form>
                        </div>
                        <p><%= prod.price %> RON/buc</p>
                      </div>
                      <hr>
                      <div>
                        <p>TOTAL <%= prod.totalPrice %> RON</p>
                      </div>
                      <hr>
                      <div class='d-flex align-items-center justify-content-center'>
                        <form action='/remove-from-cart' method='POST'>
                          <button type='submit'>
                            <svg xmlns="http://www.w3.org/2000/svg" width="44" height="44" fill="#333652" class="bi bi-x-square" viewBox="0 0 16 16">
                              <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                              <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                            </svg>
                          </button>
                          <input type="hidden" name="prodId" value='<%= prod.prodId %>'>
                          <input type="hidden" name="_csrf" value='<%= csrfToken %>'>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
                
              </div>
            </li>
          <% }) %>
        </ul>
        <div class='d-flex flex-column gap-3'>
          <h3>Preț total: <%= totalCartPrice %> RON</h3>
          <div>
            <button type='button' class='button' id='sendOrder'>Trimite comanda</button>
          </div>
        </div>

        <section id='addresses' class='my-3 flex-column align-items-center justify-content-center text-center' style='display: none;'>
          <div class='d-flex flex-row align-items-center mb-3'>
            <h3>Alege o adresă din cele salvate</h3>
          </div>
          <div class='w-100'>
            <% if (addresses.length > 0) { %>
              <ul>
                <div class='address-container'>
                  <% addresses.forEach(address => { %>
                    <div class='address-card d-flex flex-column align-items-start'>
                      <div class='w-100 h-100'>
                        <% if (address.default) { %>
                          <li><h4>Adresa principală</h4></li>
                        <% } %>
                        <li><%= address.country %></li>
                        <li><%= address.state %></li>
                        <li><%= address.city %></li>
                        <li><%= address.address %></li>
                        <li><%= address.zipCode %></li>
                        <li><%= address.fullName %></li>
                        <li><%= address.phoneNumber %></li>
                      </div>
                      <div class='buttons d-flex flex-column align-items-center'>
                        <form class='mt-3' action="/send-order/<%= address.id %>" method="GET">
                          <button type='submit' class='button'>Selectează adresă</button>
                          <input type="hidden" name="_csrf" value='<%= csrfToken %>'>
                        </form>
                      </div>
                    </div>
                  <% }) %>
                </div>
              </ul>
            <% } else { %>
              <p>Nicio adresă salvată.</p>
              <section class='address-info my-3 d-flex flex-column align-items-center justify-content-center text-center'>
                <div class='d-flex flex-row align-items-center justify-content-center mb-3'>
                  <h3>Adaugă o adresă</h3>
                    <svg id='addressFormButtonCart' xmlns="http://www.w3.org/2000/svg" width="44" height="44" fill="#333652" class="bi bi-plus" viewBox="0 0 16 16">
                      <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                    </svg>
                </div>
                <form action='/add-user-address' method='post' id='addressFormCart' style='display: none;'>
                  <div class='mb-3'>
                    <label class='d-block' for="country">Țara</label>
                    <select name="country" id="country" required>
                      <option value="RO">România</option>
                    </select>
                  </div>
                  <div class='mb-3'>
                    <label class='d-block' for="state">Județ</label>
                    <select name="state" id="state" required>
                      <option value="" disabled selected>Selectează județul</option>
                      <% states.forEach(state => { %>
                        <option value="<%= state.auto %>"><%= state.nume %></option>
                      <% }) %>
                    </select>
                  </div>
                  <div class='mb-3'>
                    <label class='d-block' for="city">Localitate</label>
                    <select name="city" id="city" required>
                      <option value="" disabled selected>Selectează județul mai intâi</option>
                    </select>
                  </div>
                  <div class='mb-3'>
                    <label class='d-block' for="address">Adresa</label>
                    <input type="text" name='address' id='address' required>
                  </div>
                  <div class='mb-3'>
                    <label class='d-block' for="zipCode">Cod poștal</label>
                    <input type="number" name='zipCode' id='zipCode' required>
                  </div>
                  <div class='mb-3'>
                    <label class='d-block' for="fullName">Nume complet</label>
                    <input type="text" name='fullName' id='fullName' required>
                  </div>
                  <div class='mb-3'>
                    <label class='d-block' for="phoneNumber">Număr de telefon</label>
                    <input type="text" name='phoneNumber' id='phoneNumber' required>
                  </div>
                  <button type='submit' class='button'>Adaugă</button>
                  <input type="hidden" name="_csrf" value='<%= csrfToken %>'>
                  <input type="hidden" name="url" value='/cart'>
                </form>
              </section>
            <% } %>
          </div>
        </section>

      <% } else { %>
        <div class='w-100 text-center'>
          <h1>Coșul este gol.</h1>
        </div>
      <% } %>
    </section>
  </main>
  <script src="/js/cart.js"></script>
<%- include('../includes/end.ejs') %>